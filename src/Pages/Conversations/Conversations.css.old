.conversations {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;

  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-size: 24px;
  color: black;

  margin-top: 20px;
  padding-bottom: 20px;

  overflow: auto;
}

.conversations__conversation {
  max-width: 730px;
  width: 100%;
  height: 90px;

  display: flex;
  flex-direction: column;

  /* align-items: center; */
  justify-content: center;

  border: 1px solid #a5a5a5;
  border-bottom: 0;

  padding-left: 15px;
  padding-right: 15px;

  cursor: pointer;
}

.conversations__conversation:hover {
  background: #dfdfdf;
}

.conversations__conversation:last-child {
  border-bottom: 1px solid #a5a5a5;
}

.conversations__top_panel {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}

.conversations__bottom_panel {
  display: flex;
  align-items: center;

  color: #7e7d7d;

  white-space: pre;
}

.conversations__time {
  color: #a5a5a5;
  font-size: 20px;
}

.conversations__button {
  background: #ffffff;
  border: 1px solid #000000;
  border-radius: 10px;
  padding-left: 10px;
  padding-right: 10px;
  height: 35px;

  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-size: 20px;

  cursor: pointer;
}

.conversations__button_wrapper {
  max-width: 730px;
  width: 100%;

  margin-bottom: 20px;
}

.modal {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgb(0, 0, 0);
  background-color: rgba(0, 0, 0, 0.4);
}

.modal__content {
  display: flex;
  flex-direction: column;

  max-width: 400px;
  max-height: 400px;

  width: 100%;
  height: 100%;
  background: white;

  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-size: 24px;
  color: black;

  padding: 20px;
}

.modal__input {
  margin-top: 10px;
  max-width: 200px;

  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-size: 20px;
  color: black;
}

.modal__text {
  margin-top: 10px;
}

.modal__button {
  margin-top: 20px;

  background: #ffffff;
  border: 1px solid #000000;
  border-radius: 10px;
  padding-left: 10px;
  padding-right: 10px;
  height: 35px;

  max-width: 160px;

  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-size: 20px;

  cursor: pointer;
}

@media screen and (max-width: 425px) {
  .conversations__time {
    font-size: 14px;
  }

  .conversations {
    font-size: 18px;

    margin-top: 0px;

    padding-left: 15px;
    padding-right: 15px;
  }

  .conversations__conversation {
    height: 70px;

    padding-left: 15px;
    padding-right: 15px;
  }

  .conversations__button {
    font-size: 15px;
  }
}
